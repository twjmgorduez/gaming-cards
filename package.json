{
  "name": "gaming-cards",
  "version": "0.0.1",
  "description": "Back-end Gaming cards",
  "main": "index.js",
  "scripts": {
    "build": "babel ./src -d ./dist --source-maps",
    "serve": "NODE_ENV=production node dist/index.js",
    "start": "NODE_ENV=development babel-node src/index.js",
    "dev": "DEBUG=server:debug NODE_ENV=development nodemon --exec babel-node src/index.js",
    "test": "DEBUG=server:debug NODE_ENV=test nyc mocha --require @babel/register --reporter spec --exit   tests/unit/* --exec babel-node",
    "it": "DEBUG=server:debug NODE_ENV=test mocha --require @babel/register --reporter spec --exit   tests/it/* --exec babel-node",
    "test:watch": "DEBUG=server:debug NODE_ENV=test mocha  --require @babel/register --watch --reporter  spec   tests/ --exec babel-node",
    "eslint-src": "eslint src/**/*.js --ignore-pattern \"node_modules/\"",
    "eslint-tests": "eslint tests/**/*.js --ignore-pattern \"node_modules/\"",
    "validate": "npm ls",
    "lint": "jshint ."
  },
  "pre-commit": [
    "eslint-src",
    "eslint-tests",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twjmgorduez/gaming-cards.git"
  },
  "author": "@twjmgorduez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/twjmgorduez/gaming-cards/issues"
  },
  "homepage": "https://github.com/twjmgorduez/gaming-cards#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/register": "^7.9.0",
    "chai": "^4.2.0",
    "debug": "^4.1.1",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^22.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.1",
    "supertest": "^4.0.2"
  },
  "engines": {
    "node": ">=8"
  },
  "eslintConfig": {
    "plugins": [
      "node"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "rules": {
      "node/no-unsupported-features/es-syntax": 0,
      "node/no-unsupported-features/es-builtins": 0
    },
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    }
  },
  "dependencies": {
    "express": "^4.16.4",
    "mongoose": "^5.9.7",
    "precommit-hook": "^3.0.0"
  }
}
